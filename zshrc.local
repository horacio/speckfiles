# Aliases

# Convenient sudo replacements.
alias please="sudo"
alias _="sudo"
# Convenient typos.
alias sl="ls"
alias dc="cd"
alias ivm="vim"
# `bundle exec` abbreviation
alias be="bundle exec"
# Show colored output for the ls command.
alias ls="ls --color=auto"

# Environmental variables

# Add RVM to PATH for scripting
export PATH="$PATH:$HOME/.rvm/bin"
# Add Leiningen to PATH
export PATH="$PATH:$HOME/bin"
# Add GS_NAME to PS1.
export PS1="${GS_NAME} $PS1"
